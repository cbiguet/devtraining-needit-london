        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	// Create new GlideRecord object
	var grUser = new GlideRecord('incident');
	
	// Get caller record
	var oldCaller = grUser.get('caller_id',current.caller_id);
	
	//Initialize message
	msg = "";
	
	//Create message to add info message
	if (oldCaller) {
		msg = current.caller_id.name + " was the caller in at least one other incident";
	}
	else {
		msg = "This is " + current.caller_id.name + "'s first call";
	}
	
	//Display info message
	gs.addInfoMessage(msg);

})(current, previous);]]></script>
